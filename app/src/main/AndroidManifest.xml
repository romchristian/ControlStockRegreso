<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="movil.palermo.com.py.controlstockregreso" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="movil.palermo.com.py.controlstockregreso.AppController"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name="movil.palermo.com.py.controlstockregreso.LoginActivity"
            android:label="@string/title_activity_login"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="movil.palermo.com.py.controlstockregreso.MainCrearControl"
            android:label="@string/app_name"
            android:configChanges="orientation"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name="movil.palermo.com.py.controlstockregreso.ListaProductos"
            android:label="@string/title_activity_lista_productos"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="movil.palermo.com.py.controlstockregreso.ListaVendedor"
            android:label="@string/title_activity_lista_vendedor"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="movil.palermo.com.py.controlstockregreso.ListaChofer"
            android:label="@string/title_activity_lista_chofer"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="movil.palermo.com.py.controlstockregreso.ListaMovil"
            android:label="@string/title_activity_lista_movil"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="movil.palermo.com.py.controlstockregreso.AgregarCantidadActivity"
            android:label="@string/title_activity_agregar_cantidad"
            android:windowSoftInputMode="adjustNothing"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
