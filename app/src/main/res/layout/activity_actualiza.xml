<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="movil.palermo.com.py.stockregreso.ActualizaActivity">




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Actualizar Datos"
        android:id="@+id/textView"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Productos"
        android:clickable="false"
        android:textSize="20sp"
        android:id="@+id/checkBoxProductos"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginBottom="10dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vehiculos"
        android:id="@+id/checkBoxVehiculos"
        android:clickable="false"
        android:textSize="20sp"
        android:layout_below="@+id/checkBoxProductos"
        android:layout_alignLeft="@+id/checkBoxProductos"
        android:layout_alignStart="@+id/checkBoxProductos"
        android:layout_marginBottom="10dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choferes"
        android:clickable="false"
        android:textSize="20sp"
        android:id="@+id/checkBoxChoferes"
        android:layout_below="@+id/checkBoxVehiculos"
        android:layout_alignLeft="@+id/checkBoxVehiculos"
        android:layout_alignStart="@+id/checkBoxVehiculos"
        android:layout_marginBottom="10dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vendedores"
        android:clickable="false"
        android:textSize="20sp"
        android:id="@+id/checkBoxVendedores"
        android:layout_below="@+id/checkBoxChoferes"
        android:layout_alignLeft="@+id/checkBoxChoferes"
        android:layout_alignStart="@+id/checkBoxChoferes" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/actualizar"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="82dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
