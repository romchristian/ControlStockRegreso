<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_row_selector"
    android:padding="8dp" >

    <!-- Thumbnail Image -->
    <!--<com.android.volley.toolbox.NetworkImageView
        android:id="@+id/thumbnail"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="8dp" />-->

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/kentucky_10"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="8dp"/>

    <!-- Movie Title -->
    <TextView
        android:id="@+id/nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:textSize="@dimen/title"
        android:text="KENTUKY 20"
        android:textStyle="bold" />

    <!-- Rating -->
    <TextView
        android:id="@+id/tituloCajas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nombre"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="Cajas"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tituloGruesas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nombre"
        android:layout_marginTop="1dip"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/tituloCajas"
        android:text="Gruesas"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tituloCajetillas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nombre"
        android:layout_marginTop="1dip"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/tituloGruesas"
        android:text="Cajetillas"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tituloUnidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nombre"
        android:layout_marginTop="1dip"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/tituloCajetillas"
        android:text="Un"
        android:textSize="12sp"/>


    <TextView
        android:id="@+id/cantCajas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tituloCajas"
        android:layout_marginTop="1dip"
        android:layout_alignBottom="@+id/thumbnail"
        android:layout_alignRight="@+id/tituloCajas"
        android:layout_toRightOf="@+id/thumbnail"
        android:gravity="center_horizontal|center_vertical"
        android:text="120"
        android:textSize="16sp"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/cantGruesas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tituloGruesas"
        android:layout_marginTop="1dip"
        android:layout_alignBottom="@+id/thumbnail"
        android:layout_alignRight="@+id/tituloGruesas"
        android:layout_alignLeft="@+id/tituloGruesas"
        android:gravity="center_horizontal|center_vertical"
        android:text="300"
        android:textSize="16sp"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/cantCajetillas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tituloCajetillas"
        android:layout_marginTop="1dip"
        android:layout_alignBottom="@+id/thumbnail"
        android:layout_alignRight="@+id/tituloCajetillas"
        android:layout_alignLeft="@+id/tituloCajetillas"
        android:gravity="center_horizontal|center_vertical"
        android:text="50"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/cantUnidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tituloUnidad"
        android:layout_marginTop="1dip"
        android:layout_alignBottom="@+id/thumbnail"
        android:layout_alignRight="@+id/tituloUnidad"
        android:layout_alignLeft="@+id/tituloUnidad"
        android:gravity="center_horizontal|center_vertical"
        android:text="0"
        android:textSize="16sp"
        android:textStyle="bold"/>



</RelativeLayout>